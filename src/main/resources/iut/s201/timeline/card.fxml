<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to bottom, #000000, #1c1c1c); -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #333; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iut.s201.timeline.CardController">
    <children>
        <VBox fx:id="backgroundCard" alignment="CENTER" prefHeight="300.0" prefWidth="200.0" style="-fx-background-radius: 15; -fx-border-radius: 15;">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" />
                <Label fx:id="dateLabel" alignment="CENTER" style="-fx-background-color: #000; -fx-text-fill: #FFFF00; -fx-padding: 5 10; -fx-background-radius: 10;" text="2017">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="titleLabel" alignment="CENTER" prefWidth="119.0" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Titre carte" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Arial" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" />
                    </VBox.margin>
                    <minHeight>
                        <Label fx:constant="USE_PREF_SIZE" />
                    </minHeight>
                    <maxHeight>
                        <Label fx:constant="USE_PREF_SIZE" />
                    </maxHeight>
                </Label>
            </children>
        </VBox>
    </children>
</VBox>